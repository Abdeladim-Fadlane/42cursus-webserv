#!/usr/bin/perl

use strict;
use warnings;

# Print CGI content type header
print "Content-type: text/html\r\n\r\n";

# Output HTML content
print "<html>\n";
print "<head>\n";
print "<title>CGI Perl Script</title>\n";
print "</head>\n";
print "<body>\n";
print "<h1>Hello, CGI Perl!</h1>\n";
print "<p>This is a simple CGI script written in Perl.</p>\n";
print "</body>\n";
print "</html>\n";
